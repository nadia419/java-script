<script>
    // allways the same formet function + name()+ {operetion of the function}
  function formattabox(){
    // Get the document ID which is box here in the document" ".style (I modify a CSS property). CSS property that we want to change.
    //if the property is composed of two terms, the second term must be capitalized = property value

    document.getElementById("box").style.backgroundColor = "pink";
   ////I can simplify the properties directly by inserting the id to modify
   box.style.padding = "5px";
   box.style.borderRadius = "15px";
   box.style.fontFamily = "sans-Sarif";
  }  


function allineamento(){
    title.style.textAlign ="center";
    paragrafe.style.textAlign="justify";

}
 
function annimazione(){
   box.style.animationName ="rotation ";
   box.style.animationDuration = "2s";
   box.style.animationIterationCount = "1";
   box.style.animationFillMode= "forwords";
    

   
}
function changephoto(){
    // //if we want to change or add attributes we use the attribute we want to modify
    image.src ="https://cdn.pixabay.com/photo/2025/06/04/22/43/facade-9641925_1280.jpg";
 ////we can also have unimplemented attributes
    image.alt = "surprice picture";
    title.innerHTML= "we have a new title";
}

</script>

